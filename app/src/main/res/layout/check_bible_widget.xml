<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/coner_round"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/appwidget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:background="@drawable/title_coner_round"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="title"
        android:textColor="#eeffff" />

    <TextView
        android:id="@+id/appwidget_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="chapter"
        android:textColor="#eeffff" />

    <TextView
        android:id="@+id/appwidget_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="today"
        android:textColor="#eeffff" />

    <!--<TextView-->
    <!--android:id="@+id/appwidget_during"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:text="during"/>-->


</LinearLayout>